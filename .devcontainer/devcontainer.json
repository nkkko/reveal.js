{
    "name": "reveal.js",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
    "forwardPorts": [
      8000
    ],
    "customizations": {
      "vscode": {
        "settings": {
          "javascript.suggest.autoImports": true,
          "editor.formatOnSave": true
        },
        "extensions": [
          "esbenp.prettier-vscode",
          "dbaeumer.vscode-eslint"
        ]
      }
    },
    "postCreateCommand": "npm install && npm start"
  }